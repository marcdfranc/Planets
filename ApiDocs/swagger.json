  "components": {
    "schemas": {
      "PlanetData": {
        "required": [
          "circular",
          "diameter",
          "distanceFromTheSun",
          "imageIconPath",
          "imagePath",
          "mass",
          "name",
          "position"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 30,
            "minLength": 1,
            "type": "string"
          },
          "distanceFromTheSun": {
            "type": "number",
            "format": "double"
          },
          "mass": {
            "type": "number",
            "format": "double"
          },
          "diameter": {
            "type": "number",
            "format": "double"
          },
          "notes": {
            "type": "string",
            "nullable": true
          },
          "imagePath": {
            "minLength": 1,
            "type": "string"
          },
          "imageIconPath": {
            "minLength": 1,
            "type": "string"
          },
          "position": {
            "type": "integer",
            "format": "int32"
          },
          "circular": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PlanetResponse": {
        "type": "object",
        "properties": {
          "id": {
