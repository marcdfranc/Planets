              "schema": {
                "$ref": "#/components/schemas/PlanetData"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlanetData"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlanetData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorized",
